<h1>Editando Usuário: {{user.name}}</h1>
<div class="container-form">
    <form action="/users/update" method="POST" class="form">
        <input type="hidden" name="id" value="{{user.id}}">
        <div class="form-control">
            <label for="name">Nome: </label>
            <input value="{{user.name}}" type="text" name="name">
        </div>
        <div class="form-control">
            <label for="occupation">Profissão: </label>
            <input value="{{user.occupation}}" type="text" name="occupation">
        </div>
        <div class="form-control form-checkbox">
            {{#if user.newsletter}}
            <input type="checkbox" name="newsletter" checked>
            {{else }}
            <input type="checkbox" name="newsletter">
            {{/if}}
            <label for="newsletter">Receber Promoções</label>
        </div>
        <input type="submit" value="Editar">
    </form>
</div>
<div class="address-container">
    <h2>Endereços: </h2>
    <form action="/address/create" method="POST">
        <input type="hidden" name="UserId" value="{{ user.id }}">
        <div class="form-control">
            <label for="street">Rua</label>
            <input type="text" name="street" placeholder="Rua, Avenida ou Alameda">
        </div>
        <div class="form-control">
            <label for="number">Número: </label>
            <input type="text" name="number" placeholder="Número e Complementos">
        </div>
        <div class="form-control">
            <label for="city">Cidade: </label>
            <input type="text" name="city" placeholder="Cidade">
        </div>
        <input type="submit" value="Adicionar Endereço">
    </form>
    <div class="address-list">
        <h2>Lista de Endereços: </h2>
        {{#each user.Addresses}}
            <div>
                #{{ this.id }} - 
                {{ this.street }} - 
                {{ this.number }} - 
                {{ this.city }}
                <form action="/address/delete" method="POST">
                    <input type="hidden" name="UserId" value="{{this.UserId}}">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="submit" value="Excluir">
                </form>
            </div>
        {{/each}}
    </div>
</div>  
